<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".AnswerDialogActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/blueFacebook_background"
        android:backgroundTint="@color/blueFacebook_background" />

    <EditText
        android:id="@+id/answer_sharing_mat_dialog_Body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:hint="내용을 입력해주세요."
        android:textColor="@color/black" />

    <Button
        android:id="@+id/anssharingregister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/blueFacebook_background"
        android:backgroundTint="@color/blueFacebook_background"
        android:onClick="Button_onClick"
        android:text="등록"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>