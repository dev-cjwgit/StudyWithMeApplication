<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".AnswerDialogActivity">

    <EditText
        android:id="@+id/answerActivity_titleEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:hint="제목을 입력해주세요."
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/blueFacebook_background"
        android:backgroundTint="@color/blueFacebook_background" />

    <EditText
        android:id="@+id/answerActivity_bodyEditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.5"
        android:hint="내용을 입력해주세요."
        android:textColor="@color/black" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/blueFacebook_background"
        android:backgroundTint="@color/blueFacebook_background"
        android:onClick="addButton_onClick"
        android:text="등록"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>