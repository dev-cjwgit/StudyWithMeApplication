<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="20"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <!--
        login_edittext_id
        login_edittext_pw
        login_button_login
        login_textview_join_membership
    -->
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="5"/>

    <!-- 앱 로고 -->
    <ImageView
        android:layout_height="0dp"
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:src="@drawable/login_logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:text="스윗ME"/>

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_weight="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ID : "
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1.5"/>
            <EditText
                android:id="@+id/login_editText_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:hint="plz in id" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="PW : "
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_weight="1.5"/>
            <EditText
                android:id="@+id/login_editText_pw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:hint="plz in pw" />
        </LinearLayout>

        <Button
            android:id="@+id/login_button_login"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:text="login"

            android:onClick="loginButton_onClick"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/login_textView_join_membership"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="회원가입"
        android:layout_gravity="center"/>

</LinearLayout>