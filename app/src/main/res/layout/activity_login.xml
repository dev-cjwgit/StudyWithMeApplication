<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".LoginActivity">
    <!--
        login_edittext_id
        login_edittext_pw
        login_button_login
        login_textview_join_membership
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_weight="5.5" />

    <!-- 앱 로고 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:fontFamily="@font/font_lucida_grande"
        android:gravity="center"
        android:text="Study With Me"
        android:textColor="@color/blueFacebook"
        android:textFontWeight="600"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--    <ImageView-->
    <!--        android:id="@+id/imageView2"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="24dp"-->
    <!--        android:layout_weight="2"-->
    <!--        android:src="@drawable/logo_2" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="3">


        <EditText
            android:id="@+id/login_editText_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:hint=" 아이디(이메일 또는 전화번호)" />


        <EditText
            android:id="@+id/login_editText_pw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:hint=" 비밀번호"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_button_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@color/blueFacebook_background"
            android:backgroundTint="@color/blueFacebook_background"
            android:onClick="loginButton_onClick"
            android:text="로그인"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/login_textView_join_membership"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/gray"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>